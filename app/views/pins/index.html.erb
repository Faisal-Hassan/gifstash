<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.name %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-warning btn-xs' %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-success btn-xs' %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class: 'btn btn-info btn-xs' %>
<% end %>
