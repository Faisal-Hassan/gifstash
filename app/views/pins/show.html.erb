<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<div class="panel show center panel-default">
		  <div class="panel-heading show center">
				<%= image_tag @pin.image.url, class: "img-responsive center-block" %>
			</div>
			<div class="panel-body show">
				<p><%= @pin.description %></p>
				<p><strong><%= @pin.user.name if @pin.user %></strong></p>
				<% if current_user && pin.user == current_user %>
					<%= link_to 'Edit', edit_pin_path(@pin), class: 'btn btn-success btn-xs' %> |
				<% end %>
				<%= link_to 'Back', pins_path, class: 'btn btn-info btn-xs' %>
			</div>
		</div>
	</div>
</div>
